<UserControl
    x:Class="Materal.Tools.WinUI.Controls.FileSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Materal.Tools.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Width="{x:Bind Width, Mode=OneWay}"
        MinWidth="{x:Bind MinWidth, Mode=OneWay}"
        MaxWidth="{x:Bind MaxWidth, Mode=OneWay}"
        ColumnSpacing="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            Text="{x:Bind Title, Mode=OneWay}" />
        <TextBox
            x:Name="FilePathTextBox"
            Grid.Column="1"
            IsReadOnly="True"
            PlaceholderText="未选择文件"
            Text="{x:Bind FilePath, Mode=TwoWay}" />
        <Button
            x:Name="SelectFileButton"
            Grid.Column="2"
            Click="SelectFileButton_Click"
            Content="选择私钥" />
    </Grid>
</UserControl>
