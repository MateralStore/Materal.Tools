<Page
    x:Class="Materal.Tools.WinUI.Pages.COAPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Materal.Tools.WinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="8">
        <TextBox Text="{x:Bind ViewModel.CertificateName, Mode=TwoWay}" Header="证书名称" />
        <DatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" Header="到期时间" />
        <Button Content="签发证书" Command="{x:Bind ViewModel.WriteCertificateFileCommand}" />
        <Button Content="证书验证" Command="{x:Bind ViewModel.VerifyAuthorizationCommand}" />
        <TextBlock Text="{x:Bind ViewModel.Message, Mode=OneWay}" />
    </StackPanel>
</Page>
